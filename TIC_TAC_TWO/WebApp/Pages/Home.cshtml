@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.Pages.Home

<div class="row justify-content-center mt-4">
    <div class="col-md-4">
        <h1>Welcome To Tic-Tac-Two App</h1>
        <form method="post">
            <input type="hidden" name="UserName" value="@Model.UserName" />
            <input type="hidden" name="IsAdmin" value="@Model.IsAdmin" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConfigId" class="control-label"></label>
                <select asp-for="ConfigId" class="form-select" asp-items="Model.ConfigSelectList"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>