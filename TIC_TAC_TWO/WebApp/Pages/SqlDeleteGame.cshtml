@page
@model WebApp.Pages.SqlDeleteGame

@{
    Layout = "Shared/_Layout";
    ViewData["Username"] = Model.Username;
}


@if (!string.IsNullOrWhiteSpace(ViewData["Username"] as string))
{
    <h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.CreatedAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.CreatedAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Configuration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Configuration.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.SaveName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.SaveName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.NextMoveBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.NextMoveBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.MoveCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.MoveCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GridPositionX)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GridPositionX)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GridPositionY)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GridPositionY)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.GameBoardSerialized)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.GameBoardSerialized)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Game.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-route-Username="@Model.Username" asp-page="./SqlSavedGames">Back to List</a>
    </form>
</div>
}
else
{
    <p>You are not a user</p>
}

